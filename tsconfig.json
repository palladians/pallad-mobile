{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"module": "esnext",
		"jsx": "react-native",
		"baseUrl": "src",
		"paths": {
			"@/*": ["./*"],
			"@/assets/*": ["../../../packages/shared/assets/*", "./assets/*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"nativewind-env.d.ts"
	]
}
